
(defwidget greeter [?text name]
	(box :orientation "horizontal"
		 :halign "center"
	  text
	  (button :onclick "notify-send 'Hello' 'Hello, ${name}'"
		"Greet")))

(defwindow example 
	:monitor 0
	:geometry (geometry :x "0"
						:y "0"
						:width "70%"
						:height "30px"
						:anchor "top left"
						:orientation "vertical"
					)
	:stacking "fg"
	:exlusive true
	(greeter :text "DocNight" 
			 :name "Burh")
"example contdent")

  